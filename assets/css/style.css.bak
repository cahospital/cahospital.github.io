*{padding:0;margin:0;}

.float{
	position:fixed;
	width:60px;
	height:60px;
	bottom:40px;
	left:50%;
	background-color:#FFF;
	color:#0C9;
	border-radius:33px;
	text-align:center;
	box-shadow: 2px 2px 3px #999;
}

.my-float{
	margin-top:22px;
}

/* Place the navbar at the bottom of the page, and make it stick */
.navbar {
background: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0.5), rgba(255,255,255,1));
  overflow: hidden;
  position: fixed;
  bottom: 0;
  width: 100%;
}

/* Style the links inside the navigation bar */
.navbar a {
	position:center-top;
  float: top;
  display: block;
  margin-left: auto;
  margin-right: auto;
  width: 50%;
  color: #034C81;
  text-align: center;
  border-radius:33px;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
box-shadow: 2px 2px 3px #999;
z-index:10;
}

/* Change the color of links on hover */
.navbar a:hover {
  background-color: #ddd;
  color: black;
}

/* Add a color to the active/current link */
.navbar a.active {
  background-color: #034C81;
  color: white;
}

